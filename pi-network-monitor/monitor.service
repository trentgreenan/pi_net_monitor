[Unit]
Description=Network and Weather Monitor Service
After=network.target

[Service]
WorkingDirectory=/home/trentgreenan/pi-network-monitor
Environment="PATH=/home/trentgreenan/pi-network-monitor/venv/bin"
ExecStart=/home/trentgreenan/pi-network-monitor/venv/bin/python run_monitor.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
